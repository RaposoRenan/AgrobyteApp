<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAF3E0">

    <!-- Campo para o nome do produto -->
    <EditText
        android:id="@+id/etNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"
        android:backgroundTint="#A52A2A"
        android:padding="10dp"/>

    <!-- Campo para o valor unitário -->
    <EditText
        android:id="@+id/etValorUnitario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor Unitário"
        android:inputType="numberDecimal"
        android:backgroundTint="#A52A2A"
        android:padding="10dp"/>

    <!-- Campo para a quantidade em estoque -->
    <EditText
        android:id="@+id/etQuantidadeEstoque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantidade em Estoque"
        android:inputType="number"
        android:backgroundTint="#A52A2A"
        android:padding="10dp"/>

    <!-- Campo para a data de validade -->
    <EditText
        android:id="@+id/etDataValidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Data de Validade (AAAA-MM-DD)"
        android:inputType="date"
        android:backgroundTint="#A52A2A"
        android:padding="10dp"/>

    <!-- Botão para salvar o produto -->
    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar Produto"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FFA726"
        android:textColor="#FFFFFF"/>
</LinearLayout>
