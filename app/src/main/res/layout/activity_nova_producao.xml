<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova Produção"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Seleção do Produto -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto:" />

        <Spinner
            android:id="@+id/spnProdutos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Tempo de Plantio e Quantidade Prevista -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo de Plantio (dias):" />

        <EditText
            android:id="@+id/etTempoPlantio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade Prevista:" />

        <EditText
            android:id="@+id/etQuantidadePrevista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- Insumos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Insumos:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInsumos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAdicionarInsumo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Insumo" />

        <!-- Botão Confirmar Produção -->
        <Button
            android:id="@+id/btnSalvarProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Salvar Produção" />

    </LinearLayout>
</ScrollView>
