<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo de pesquisa por ID -->
    <EditText
        android:id="@+id/etSearchId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquisar por ID"
        android:inputType="number" />

    <!-- Botões de ação -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Pesquisar" />

        <Button
            android:id="@+id/btnAtualizarStatus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Atualizar Status"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnIniciarProducao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Produção"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView para exibir as produções -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducoes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp" />

</LinearLayout>
