<!-- res/layout/activity_detalhes_producao.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetalhesProducao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes da Produção"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Informações sobre o Produto, Status e Tempo de Plantio -->
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: " />

        <TextView
            android:id="@+id/tvProdutoNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto:" />

        <TextView
            android:id="@+id/tvStatusProducao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:" />

        <TextView
            android:id="@+id/tvTempoPlantio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo de Plantio:" />

        <TextView
            android:id="@+id/tvQuantidadePrevista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade Prevista: " />

        <TextView
            android:id="@+id/tvDataEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Entrada: " />

        <!-- Lista de Insumos Utilizados -->
        <TextView
            android:id="@+id/tvInsumos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Insumos:" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewInsumos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botões -->
        <Button
            android:id="@+id/btnRealizarColheita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Realizar Colheita" />

        <Button
            android:id="@+id/btnEditarProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Editar Produção" />

        <Button
            android:id="@+id/btnExcluirProducao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Excluir Produção" />

    </LinearLayout>
</ScrollView>
