<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo de pesquisa para o ID da produção -->
    <EditText
        android:id="@+id/etSearchId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pesquisar ID da Produção"
        android:inputType="number"
        android:layout_marginBottom="8dp" />

    <!-- Botões para pesquisa, iniciar e atualizar status -->
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesquisar" />

    <Button
        android:id="@+id/btnIniciarProducao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Produção"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnAtualizarStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Atualizar Status"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView para exibir a lista de produções -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
